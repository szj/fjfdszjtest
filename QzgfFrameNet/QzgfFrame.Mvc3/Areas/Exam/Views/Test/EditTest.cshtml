<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
@model QzgfFrame.Exam.TestManger.Models.TestContent
@{
    
    ViewBag.Title = "Register";
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title></title>
    <link href="../../../../Content/Lib/css/Exam/EditTest.css" rel="stylesheet" type="text/css" />
    <script src="../../../../Lib/jquery/jquery-1.5.2.min.js" type="text/javascript"></script>
    <script src="../../../../Lib/jquery/jquery.form.js" type="text/javascript"></script>
    <script src="../../../../Lib/ligerUI/js/ligerui.all.js" type="text/javascript"></script>
    <script src="../../../../Lib/ligerUI/js/plugins/ligerLayout.js" type="text/javascript"></script>
    <script src="../../../../Lib/jquery-validation/jquery.validate.js" type="text/javascript"></script>
    <script src="../../../../Lib/jquery-validation/jquery.metadata.js" type="text/javascript"></script>
    <script src="../../../../Lib/jquery-validation/messages_cn.js" type="text/javascript"></script>
    <script src="../../../../lib/json2.js" type="text/javascript"></script>
    <script src="../../../../Lib/jquery/jquery.MultiFile.js" type="text/javascript" language="javascript"></script>
    <script src="../../../../Lib/MyDatePicker/WdatePicker.js" type="text/javascript"></script>
    <script src="../../../../Content/Lib/js/common.js" type="text/javascript"></script>
    <script src="../../../../Content/lib/js/test.js" type="text/javascript"></script>
    <script src="../../../../Content/lib/js/Exam/EditTest.js" type="text/javascript"></script>
    <script type="text/javascript">
        debugger;
    </script>
</head>
<body>
    @using (Html.BeginForm("Edit", "Test", FormMethod.Post, new {name = "newForm", id = "newForm" }))
    {
        @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
        <!--------头部部分-------->
        <div id="top" class="top">
            @Html.HiddenFor(m => m.ExamTestContent.ID)
            @Html.HiddenFor(m => m.ExamTestContent.CreatorID)
            <div id="testname" class="testname">@Html.TextBoxFor(m => m.ExamTestContent.Name, new { @class = "testnametxt" })</div>
            <div id="testpoints" class="testpoints">
                <input name='temppoints' type='hidden' id='temppoints' value="0" />
                <input name='tempsubjectname' type='hidden' id='tempsubjectname' value="0" />
                <table class="testpoints_table">
                    <tr>
                        <td class="testpoints_table_td">
                            试卷总分：@Html.TextBoxFor(m => m.ExamTestContent.Points, new { maxlength = "3",size="3", onkeyup = "f_onkeyup_Points()" })
                        </td>
                        <td class="testpoints_table_td">
                            当前总分：@Html.TextBoxFor(m => m.CurrentPoints, new { @readonly = "readonly", size = "3", maxlength = "3" })
                        </td>
                        <td class="testpoints_table_td">
                            所属分类：@Html.DropDownListFor(m => m.ExamTestContent.TypeID, (SelectList)ViewBag.selcourseType)
                        </td>
                    </tr>
                </table>
            </div>
        </div>   
        <!-------返回跟提交按钮部分------->    
        <div id="testsubmit" class="testsubmit">
            <input type="button" value="返 回" class="l-button l-button-test" onclick="f_windowclose()" />
            <input type="submit" value="提 交" id="Button1" class="l-button l-button-submit" />
        </div>
        <!-------整个试题部分------->
        <div class="testcontent">
            <table class="table">
                <tr>
                    <td valign="top" class="td">
                        <!--新增题型部分-->
                        <div id="testsubjecttype" class="testsubjecttype">
                            <div id="addtestsubjecttype" class="addtestsubjecttype">
                                <img src="../../../../Content/Lib/images/index/add_papers.png" style="float: left" />
                                <input type="button" name="Submitsubjecttype" class="l-button-add" value="新增题型" onclick="f_addtype()" />
                            </div>
                            <table cellpadding="0" border="0" cellspacing="0" id="typeFrame">
                                <tr>
                                    <td>
                                    </td>
                                    <td>
                                    </td>
                                    <td>
                                    </td>
                                    <td>
                                    </td>
                                </tr>
                                @{var i = 1;}
                                @{if (Model.TestSubjectsType != null)
                                  {
                                      foreach (var n in Model.TestSubjectsType as IList<QzgfFrame.Exam.TestSubjectTypeManger.Models.TestSubjectType>)
                                      {
                                          var OrderNo = "OrderNo" + i; var SubjectTypeID = "SubjectTypeID" + i;
                                          var TypeName = "TypeName" + i; var typeSignItemn = "SignItem" + i;   
                                    <tr id='@typeSignItemn' class="testsubjecttype_tr">
                                        <td>
                                            <input name='@OrderNo' type='hidden' id='@OrderNo' value="@n.ExamTestSubjectType.OrderNo"  />
                                        </td>
                                        <td>
                                            <input type='hidden'name='@SubjectTypeID' id='@SubjectTypeID' value="@n.ExamTestSubjectType.SubjectTypeID"  />
                                        </td>
                                        <td class="typename">
                                            <input  name='@TypeName' id='@TypeName' type='text'value="@n.ExamTestSubjectType.TypeName" onclick="SubjectDisplay('@n.ExamTestSubjectType.OrderNo')" ondblclick="f_ondblclick('@n.ExamTestSubjectType.OrderNo')"/>
                                        </td>
                                        <td>
                                            <a href='javascript:;' id='typeDel' onclick="DeleteTestSubjectTypeRow('@n.ExamTestSubjectType.OrderNo')">删除</a>
                                        </td>
                                    </tr>                                                                                                                              
                                                                                                                  i++;
                                      }
                                  }
                                }
                            </table>
                            <input name='txtTypeTRLastIndex' type='hidden' id='TypeTRLastIndex' value="@i" />
                            @Html.HiddenFor(m => m.testsubjecttypes)
                        </div>
                    </td>
                    <td valign="top" class="td">
                        <!--新增试题部分-->
                        <div id="testsubject" class="testsubject">
                            @{var j = 1;}
                            @{if (Model.TestSubjectsType != null)
                              {
                                  foreach (var n in Model.TestSubjectsType as IList<QzgfFrame.Exam.TestSubjectTypeManger.Models.TestSubjectType>)
                                  {
                                      var SubjectDiv = "SubjectDiv" + j;
                                      var subjectFrame = "subjectFrame" + j; var dis = "";
                                      var addtestsubject = "addtestsubject" + j;
                                      var addSubjectTypeID = "addSubjectTypeID" + j;
                                      var addtestsubjecttable = "addtestsubjecttable" + j;
                                      var SubjectTRLastIndex = "SubjectTRLastIndex" + j;
                                      if (j == 1)
                                      {
                                          dis = "block";
                                      }
                                      else
                                      {
                                          dis = "none";
                                      }
                                <div id='@SubjectDiv' style='display:@dis'>
                                    <div id="@addtestsubject" class="addtestsubjecttype">
                                        <table cellpadding='0' border='0' cellspacing='0' id='@addtestsubjecttable'>
                                            <tr>
                                                <td style="width: 0px">
                                                    <input name='@n.ExamTestSubjectType.TypeName' type='hidden' id='@addSubjectTypeID' value="@n.ExamTestSubjectType.SubjectTypeID" />
                                                </td>
                                                <td>
                                                    <img src="../../../../Content/Lib/images/index/add_questions.png" style="float: left;
                                                        padding-left: 3px" /><input type="button" name="Submitsubject" value="新增试题" class="l-button-add" onclick="f_addsubject('@n.ExamTestSubjectType.SubjectTypeID','@subjectFrame')" />
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    <table cellpadding="0" border="0" cellspacing="0" id="@subjectFrame">
                                        <tr id="subjectTitle" class="stem">
                                            <td style="width:1px"></td>
                                            <td style="width:1px"></td>
                                            <td class="testsubject_tt">
                                                题型：@n.ExamTestSubjectType.TypeName
                                            </td>
                                            <td class="subjectPoints_tt">
                                                总分(@n.testsubjectPoints) 
                                            </td>
                                        </tr>
                                        @{var k = 1;}
                                        @foreach (var m in n.TestSubjects as IList<QzgfFrame.Exam.TestSubjectManger.Models.ExamTestSubject>)
                                        {
                                            var subjectOrderNo = "OrderNo" + k; var SubjectID = "SubjectID" + k;
                                            var SubjectName = "SubjectName" + k; var Score = "Score" + k;
                                            var subjectSignItemn = j + "subjectSignItemn" + k;                          
                                            <tr id='@subjectSignItemn'>
                                                <td class="subjectSignItem">
                                                    <input name='@subjectOrderNo'type='hidden' id='@subjectOrderNo' value="@m.OrderNo" />
                                                </td>
                                                <td class="subjectSignItem">
                                                    <input name='@SubjectID' type='hidden' id='@SubjectID' value="@n.SubjectContents[k - 1].ExamSubContent.Id"  />
                                                </td>
                                                <td class="subjectSignItem">
                                                    <span class="questions_number" style=" color:#140b88">@m.OrderNo.&nbsp;&nbsp;</span><input name='@SubjectName' id='@SubjectName' type='text' class="questions_input" value="@n.SubjectContents[k - 1].ExamSubContent.Content"onkeyup="f_onkeyupSub('@subjectFrame','@subjectSignItemn')" onfocus="f_onFocusSub('@subjectFrame','@subjectSignItemn')" onclick="OneSubjectDisplay('@m.OrderNo','@subjectFrame')"/>
                                                </td>
                                                <td class="subjectSignItem">
                                                    <input name='@Score' id='@Score' type='text' maxlength = '3'  class="questions_fraction" value="@m.Score" onkeyup="f_onkeyup('@subjectFrame','@subjectSignItemn')" onfocus="f_onFocus('@subjectFrame','@subjectSignItemn')" onclick="OneSubjectDisplay('@m.OrderNo','@subjectFrame')"/>&nbsp;<a href='javascript:;' id='testsubjectDel' onclick="DeleteTestSubjectRow('@subjectFrame','@m.OrderNo')">删除</a>
                                                </td>
                                            </tr>                     
                                                                                                                                                           k++;
                                        }
                                    </table>
                                    <input name='txtSubjectTRLastIndex' type='hidden' id='@SubjectTRLastIndex' value="@k" />
                                </div>
                                                                                                                j++;
                                  }                 
                                <input name='txtTableLastIndex' type='hidden' id='TableLastIndex' value="@j" />
                              }
                              else
                              {
                                <input name='txtTableLastIndex' type='hidden' id='TableLastIndex' value="1" />              
                              }
                            }
                            @Html.HiddenFor(m => m.testsubjects)
                        </div>
                    </td>                  
                    <td valign="top" class="testsubject_papers">
                         <!--新增试题预览部分-->
                        <div id="preview" class="papers">
                            <ul style='display: none'>
                            </ul>
                            @{var a = 1;}
                            @{if (Model.TestSubjectsType != null)
                              {
                                  foreach (var n in Model.TestSubjectsType as IList<QzgfFrame.Exam.TestSubjectTypeManger.Models.TestSubjectType>)
                                  {
                                      var previewtype = "previewtype" + a;
                                      var dis = "";
                                      if (a == 1)
                                      {
                                          dis = "block";
                                      }
                                      else
                                      {
                                          dis = "none";
                                      }
                                <ul id="@previewtype" style='display:@dis'>
                                    <li class="li_tt">@n.ExamTestSubjectType.TypeName</li>
                                    @{var h = 1; }
                                    @{foreach (var m in n.TestSubjects as IList<QzgfFrame.Exam.TestSubjectManger.Models.ExamTestSubject>)
                                      {
                                          var previewsubject = a + "previewsubject" + h;
                                          var subjecttable = a + "subjecttable" + h;
                                          var MultipleAnswerName = "MultipleAnswerName" + h;
                                          var JudgesAnswerName = "JudgesAnswerName" + h;
                                          var judgesTrue = "judgesTrue" + h;
                                          var judgesFalse = "judgesFalse" + h;                                
                                        <li id="@previewsubject" class="li_bc">
                                            <table id="@subjecttable">
                                                <tr>
                                                    <td class="td_Qnumber" valign="top">@m.OrderNo．
                                                    </td>
                                                    <td>@n.SubjectContents[h - 1].ExamSubContent.Content <span style="color: Red">(@m.Score
                                                        分)</span>
                                                    </td>
                                                </tr>
                                                @{var type = n.SubjectContents[h - 1].SubjectType;var testSignItemn = "";
                                                  var g = 1; 
                                                  switch (type)
                                                  {
                                                      case "选择题":
                                                          var Multiples = n.SubjectContents[h - 1].MultipleSubject as IList<QzgfFrame.Exam.MultipleSubjectManger.Models.ExamMultipleSubject>;
                                                          var multiplesAnswer = "";
                                                          foreach (var o in Multiples)
                                                          {
                                                              var multiplesOrderNo = "subjectOrderNo" + g;
                                                              var MultipleAnswerID = "MultipleAnswerID" + g;
                                                              testSignItemn = "testSignItemn" + g; var No = "";
                                                    <tr id='@testSignItemn'>
                                                        <td>
                                                            <input name='@multiplesOrderNo' type='hidden' id='@multiplesOrderNo' value="@o.OrderNo"  />
                                                        </td>
                                                        @{switch (@o.OrderNo)
                                                          {
                                                              case "1": { No = "A"; break; }
                                                              case "2": { No = "B"; break; }
                                                              case "3": { No = "C"; break; }
                                                              case "4": { No = "D"; break; }
                                                              case "5": { No = "E"; break; }
                                                              case "6": { No = "F"; break; }
                                                              case "7": { No = "G"; break; }
                                                              case "8": { No = "H"; break; }
                                                              case "9": { No = "I"; break; }
                                                              case "10": { No = "J"; break; }
                                                              case "11": { No = "K"; break; }
                                                              case "12": { No = "L"; break; }
                                                              case "13": { No = "M"; break; }
                                                              case "14": { No = "N"; break; }
                                                              case "15": { No = "O"; break; }
                                                              case "16": { No = "P"; break; }
                                                              case "17": { No = "Q"; break; }
                                                              case "18": { No = "R"; break; }
                                                          }
                                                        }
                                                        <td>
                                                            @No：<input name='@MultipleAnswerName'  id='@MultipleAnswerID'  type="radio" />@o.MultipleContent
                                                        </td>
                                                    </tr>
                                                                                                                                   if (o.Answer == true)
                                                                                                                                   {
                                                                                                                                       multiplesAnswer = o.OrderNo;
                                                                                                                                       switch (multiplesAnswer)
                                                                                                                                       {
                                                                                                                                           case "1": { multiplesAnswer = "A"; break; }
                                                                                                                                           case "2": { multiplesAnswer = "B"; break; }
                                                                                                                                           case "3": { multiplesAnswer = "C"; break; }
                                                                                                                                           case "4": { multiplesAnswer = "D"; break; }
                                                                                                                                           case "5": { multiplesAnswer = "E"; break; }
                                                                                                                                           case "6": { multiplesAnswer = "F"; break; }
                                                                                                                                           case "7": { multiplesAnswer = "G"; break; }
                                                                                                                                           case "8": { multiplesAnswer = "H"; break; }
                                                                                                                                           case "9": { multiplesAnswer = "I"; break; }
                                                                                                                                           case "10": { multiplesAnswer = "J"; break; }
                                                                                                                                           case "11": { multiplesAnswer = "K"; break; }
                                                                                                                                           case "12": { multiplesAnswer = "L"; break; }
                                                                                                                                           case "13": { multiplesAnswer = "M"; break; }
                                                                                                                                           case "14": { multiplesAnswer = "N"; break; }
                                                                                                                                           case "15": { multiplesAnswer = "O"; break; }
                                                                                                                                           case "16": { multiplesAnswer = "P"; break; }
                                                                                                                                           case "17": { multiplesAnswer = "Q"; break; }
                                                                                                                                           case "18": { multiplesAnswer = "R"; break; }
                                                                                                                                       }
                                                                                                                                   }

                                                                                                                                   g++;
                                                          }
                                                    <tr>
                                                        <td>
                                                            &nbsp;
                                                        </td>
                                                        <td>
                                                            <div>参考答案：<span>@multiplesAnswer</span></div>
                                                        </td>
                                                    </tr>
                                                                break;
                                                      case "填空题":
                                                                var FillBlanks = n.SubjectContents[h - 1].FillBlanksSubject as IList<QzgfFrame.Exam.FillBlanksSubjectManger.Models.ExamFillBlanksSubject>;
                                                                foreach (var o in FillBlanks)
                                                                {
                                                                    var fillblanksOrderNo = "subjectOrderNo" + g; var fillblanksAnswer = "fillblanksAnswer" + g;
                                                                    testSignItemn = "testSignItemn" + g;
                                                    <tr id='@testSignItemn'>
                                                        <td>
                                                            <input name='@fillblanksOrderNo' type='hidden' id='@fillblanksOrderNo' value="@o.OrderNo"  />
                                                        </td>
                                                        <td>
                                                            (@o.OrderNo)．<input name='@fillblanksAnswer' id='@fillblanksAnswer' type='text'/>
                                                        </td>
                                                    </tr>
                                                                                                        g++;
                                                                }
                                                    <tr>
                                                        <td>
                                                            &nbsp;
                                                        </td>
                                                        <td>
                                                            <div>
                                                                @{foreach (var o in FillBlanks)
                                                                  {
                                                                    <div class="fillanswer">
                                                                        (@o.OrderNo)．参考答案：<span>@o.Answer</span></div>
                                                                  }
                                                                }
                                                            </div>
                                                        </td>
                                                    </tr>
                                                                  break;
                                                      case "判断题":
                                                                  var Judges = n.SubjectContents[h - 1].JudgeSubject as IList<QzgfFrame.Exam.JudgeSubjectManger.Models.ExamJudgeSubject>;
                                                                  var judgesAnswer = "";

                                                                  foreach (var o in Judges)
                                                                  {
                                                                      testSignItemn = "testSignItemn" + g;
                                                    <tr id='@testSignItemn'>
                                                        <td>
                                                            &nbsp;
                                                        </td>
                                                        <td>
                                                            <input name='@JudgesAnswerName'  id='@judgesTrue'  type="radio"  />正确&nbsp;&nbsp;<input name='@JudgesAnswerName'  id='@judgesFalse'  type="radio"  />错误
                                                        </td>
                                                    </tr>
                                                                                                                                                       if (o.Answer == true) { judgesAnswer = "正确"; }
                                                                                                                                                       else { judgesAnswer = "错误"; }
                                                                                                                                                       g++;
                                                                  }
                                                    <tr>
                                                        <td>
                                                            &nbsp;
                                                        </td>
                                                        <td>
                                                            <div>
                                                                参考答案：<span>@judgesAnswer</span></div>
                                                        </td>
                                                    </tr>
                                                                break;
                                                  }
                                                }
                                            </table>
                                        </li>
                                                  h++;
                                      }
                                    }
                                </ul>
                                      a++;
                                  }
                              }
                            }
                        </div>
                    </td>
                </tr>
            </table>
        </div> 
    }
</body>
</html>
