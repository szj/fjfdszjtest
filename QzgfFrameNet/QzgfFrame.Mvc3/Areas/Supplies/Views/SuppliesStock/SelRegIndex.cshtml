  <script type="text/javascript">
        //debugger; 调试时使用
        var gridManager = null;
        var activeDialog = null;
        var gridsearch="";
        function f_find() {
            if ($("#typename").val() != "") {
                gridsearch = " and main.SaleDepartmentId='" + $("#saledeparmentid").val() + "'";
                gridsearch += " and ast.SuppliesTypeName like '%" + $("#typename").val() + "%'";
            } if (!gridManager) return;
            gridManager.setOptions(
                { parms: [{ name: 'gridsearch', value: gridsearch}] }
             );
            gridManager.loadData(true);
        }
        //选中的耗材信息
        function f_isCheckedTid(rowdata) {
            var strtid = $("#tids").val().split(",");
            for (i = 0; i < strtid.length; i++) {
                if (rowdata.SuppliesTypeId == strtid[i]) {
                    return true;
                }
            }
            return false;
        }
        $(function () {
            gridsearch = " and main.DistrictId='" + $("#saledeparmentid").val() + "'";
            f_setGrid();

        });
        function f_setGrid() {
            var state = "";
            gridManager = $("#maingrid").ligerGrid({
                columns: [
                { display: '耗材类型名称', name: 'SuppliesTypeName', align: 'left', width: 130, minWidth: 60 },
                { display: '耗材单位', name: 'UnitName', align: 'left', width: 80, minWidth: 60 },
                { display: '数量', name: 'Num', align: 'left', width: 50, minWidth: 60 },
                { display: '所属区县', name: 'DistrictName', align: 'left', width: 80, minWidth: 60 },
                { display: '所属营业部', name: 'SaleDepartmentName', align: 'left', width: 180, minWidth: 60 }
                ], dataAction: 'server',
                url: "/Supplies/SuppliesStock/GridSelPager",
                sortName: 'Id',
                sortOrder: 'desc',
                parms: [{ name: "gridsearch", value: gridsearch}],
                width: '100%', pageSize: 10,height:'100%',
                checkbox: true, isChecked: f_isCheckedTid,
                heightDiff: -9,
                onError: function (a, b) {
                    debugger
                }
            });
        }
        function f_reload() {
            gridManager && gridManager.loadData(true);
        }
        function f_getdata() {
            var manager = $("#maingrid").ligerGetGridManager();
            //manager.getData();
            var rowsdata = gridManager.getCheckedRows();
            var strlen = rowsdata.length + parseInt($("#selLen").val());
            
           if (!rowsdata.length) {
                $.ligerDialog.alert('请先选择行!');
                return null;
            }
            var ary = new Array();
            $(rowsdata).each(function (i, item) {
                var Num = this.Num;
                if (Num >= 1) {
                    var supplieType = new Object();
                    supplieType["SuppliesTypeId"] = this.SuppliesTypeId;
                    supplieType["SuppliesTypeName"] = this.SuppliesTypeName;
                    supplieType["UnitName"] = this.UnitName;
                    supplieType["Num"] = 1;
                    supplieType["MaxNum"] = this.Num;
                    ary.push(supplieType);
                }
            });
            return ary;
        }
    </script>
    <style type="text/css">
    #searchbar{margin:0px auto; width:100%; background:#F3F8F9;border-left: 1px solid #B6D3E0;border-bottom: 1px solid #B6D3E0;  border-right: 1px solid #B6D3E0; height:auto; line-height:auto;}
    
