    <script src="../../../../Lib/ligerUI/js/ligerui.all.js" type="text/javascript"></script>  
    <script src="../../../../Content/Lib/js/common.js" type="text/javascript"></script>

    <script type="text/javascript">
        //debugger; 调试时使用
        var gridManager = null;
        var activeDialog = null;

        $(function () {
            f_setGrid();
        });
        function f_setGrid() {
            var state = "";
            gridManager = $("#maingrid").ligerGrid({
                columns: [
                { display: '设备名称', name: 'EquipName', align: 'left', width: 130, minWidth: 60 },
                { display: '设备厂家', name: 'Abbrevia', align: 'left', width: 130, minWidth: 60 },
                { display: '设备类型', name: 'EquipTypeName', align: 'left', width: 130, minWidth: 60 },
                { display: '设备型号', name: 'EquipModelName', align: 'left', width: 130, minWidth: 60 },
                { display: '客户名称', name: 'ClieNames', align: 'left', width: 230, minWidth: 60 }
                ], dataAction: 'server',
                url: "/Resources/Equipment/GridPager", sortName: 'id',
                width: '99%', height: '100%', pageSize: 30,
                checkbox: true,
                heightDiff: -9,
                onError: function (a, b) {
                    debugger
                }
            });
        }
        function f_reload() {
            gridManager && gridManager.loadData(true);
        }
        function f_getdata() {
            var manager = $("#maingrid").ligerGetGridManager();
            var rowsdata = gridManager.getCheckedRows();
            if (!rowsdata.length) {
                $.ligerDialog.alert('请先选择行!');
                return null;
            }
            var ary = new Array();
            $(rowsdata).each(function (i, item) {
                var clie = new Object();
                clie["ID"] = this.Id;
                clie["EquipName"] = this.EquipName;
                clie["EquipTypeName"] = this.EquipTypeName;
                clie["Abbrevia"] = this.Abbrevia;
                clie["ClieNames"] = this.ClieNames;
                ary.push(clie);
            });
            return ary;
        }
    </script>
    <style type="text/css"> 
         #maingrid{ margin:0 auto;}
        #toolbar{margin:2px auto;width:99%; background:#F3F8F9;border: 1px solid #B6D3E0; height:30px; line-height:30px;}
        #toolbar .l-toolbar-item{ margin-top:4px;}
    </style>
</head>
<body>
    <form id="form1" runat="server">
    <div id="searchbar"></div>
    <div id="maingrid"></div>
    </form>
</body>
