    <script src="../../../../Lib/ligerUI/js/ligerui.all.js" type="text/javascript"></script>  
    <script src="../../../../Content/Lib/js/common.js" type="text/javascript"></script>

    <script type="text/javascript">
        //debugger; 调试时使用
        var gridManager = null;
        var activeDialog = null;
        function f_openWindow(url, title, width, height) {
            var dialogOptions = { width: width, height: height, title: title, url: url, buttons: [
            { text: '保存', onclick: function (item, dialog) {
                dialog.frame.f_save();
                f_reload(); //刷新数据
                //debugger;
            }
            },
            { text: '关闭', onclick: function (item, dialog) {
                dialog.close();
            }
            }
            ], isResize: true, timeParmName: 'a'
            };
            activeDialog = parent.jQuery.ligerDialog.open(dialogOptions);
        }
        function f_closeWindow(reload) {
            activeDialog && activeDialog.close();
            reload && f_reload();
        }
        function f_btnClick(item) {
            switch (item.id) {
                case "add":
                    f_add();
                    break;
                case "modify":
                    f_modify();
                    break;
                case "delete":
                    f_delete();
                    break;
                case "loadfile":
                    f_loadfile();
                    break;
                case "excelout":
                    f_excelout();
                    break;
                case "button":
                    f_button();
                    break;
            }
        }
        function f_button() {
            var rowsdata = gridManager.getCheckedRows();
            if (!rowsdata.length) {
                $.ligerDialog.alert('请先选择行!');
                return;
            }
            var id = rowsdata[0].ID;
            f_openWindow('system/ButtonList.aspx?CurID=' + id, '菜单操作管理', 600, 350);
        }
        //导出excel
        function f_excelout() {
            f_openWindow('/Resources/DedicateLine/excelout/?frameid=' + frameId, '查询模块', 700, 250, '导出Excel');
            //window.location.href = "/Resources/Vehicle/GetExcelOut";
        }
        function f_loadfile() {
            f_openWindow('/Resources/DedicateLine/LoadFile/', '集团客户信息导入', 800, 350);
        } 
        function f_add() {
           // window.location.href = "/Resources/DedicateLine?id=" + id;
            //f_openWindow('/Resources/DedicateLine/edit/0', '添加菜单', 600, 350);

            var biztypename = $("#bizTypeName").val().replace(/[ ]/g, "");
            if (biztypename == "互联网专线") {
                window.location.href = "/Resources/DedicateLine/EditInternet/0";
            }
            if (biztypename == "IMS专线")
                window.location.href = "/Resources/DedicateLine/EditIMS/0";
            if (biztypename == "VOIP专线")
                window.location.href = "/Resources/DedicateLine/EditVOIP/0";
            if (biztypename == "广域网专线")
                window.location.href = "/Resources/DedicateLine/EditWide/0";
        }
        function f_modify() {
            var rowsdata = gridManager.getCheckedRows();
            if (rowsdata.length != 1) {
                $.ligerDialog.alert('请选择一行记录!');
                return;
            }
            var id = rowsdata[0].DediLine.Id;
            var biztypename = rowsdata[0].BizTypeName;
            if(biztypename=="互联网专线")
                window.location.href = "/Resources/DedicateLine/EditInternet/?id=" + id;
            if (biztypename == "IMS专线")
                window.location.href = "/Resources/DedicateLine/EditIMS/?id=" + id;
            if (biztypename == "VOIP专线")
                window.location.href = "/Resources/DedicateLine/EditVOIP/?id=" + id;
            if (biztypename == "广域网专线")
                window.location.href = "/Resources/DedicateLine/EditWide/?id=" + id;
        }
        function f_delete() {
            var rowsdata = gridManager.getCheckedRows();
            
            if (!rowsdata.length) {
                $.ligerDialog.alert('请先选择行!');
                return;
            }

            $.ligerDialog.confirm("是否确认删除?", "提示", function (ok) {
                if (ok) {
                    $.ligerDialog.waitting("正在删除中...");
                    var idStr = "";
                    $(rowsdata).each(function (i, item) {
                        idStr += this.DediLine.Id;
                        if (i < rowsdata.length - 1) idStr += ",";
                    });
                    $.getJSON('/Resources/DedicateLine/delete/' + idStr, { Rnd: Math.random() }, function (data) {
                        if (data.Type) {
                            $.ligerDialog.success("删除成功");
                        }
                        else {
                            $.ligerDialog.error("删除失败!<BR>" + data.Message);
                        }
                        $.ligerDialog.closeWaitting();
                        f_reload();
                    });
                } else {
                    return;
                }
            });

        }
        $(function () {

            f_setToolbar();
            f_setGrid();
        });
        function f_setToolbar() {
            SetButtons($("#toolbar"), "/Service/SystemData.ashx?Action=GetButton&MenuNo=20110929162456755201"); //
        }
        function f_setGrid() {
            var bizId = $("#bizTypeId").val();
            gridManager = $("#maingrid").ligerGrid({
                columns: [
                { display: '业务类型', name: 'BizTypeName', align: 'left', width: 130, minWidth: 60 },
                { display: '客户编号', name: 'ClieNo', align: 'left', width: 180, minWidth: 60 },
                { display: '客户名称', name: 'ClieName', align: 'left', width: 180, minWidth: 60 },
                { display: '组网方式', name: 'NetWorkingMode', align: 'left', width: 180, minWidth: 60 },
                { display: '实际带宽', name: 'DediLine', type: 'object', value: 'ActualBandwidth', align: 'left', width: 180, minWidth: 60 },
                { display: 'VLAN号', name: 'DediLine', type: 'object', value: 'VLANNumber', align: 'left', width: 180, minWidth: 60 }
                ], dataAction: 'server',
                url: "/Resources/DedicateLine/gridpager", sortName: 'DediLine.Id',
                parms: [{ name: "gridsearch", value: "Id=" + bizId}],
                width: '99%', height: '100%', pageSize: 30,
                checkbox: true,
                heightDiff: -9,
                onError: function (a, b) {
                    debugger
                }
            });
        }
        function f_reload() {
            gridManager && gridManager.loadData(true);
        }
    </script>
    <style type="text/css"> 
        #maingrid{ margin:0 auto;}
        #toolbar{margin:2px auto;width:99%; background:#F3F8F9;border: 1px solid #B6D3E0; height:30px; line-height:30px;}
        #toolbar .l-toolbar-item{ margin-top:4px;}
    </style>
</head>
<body>
    <form id="form1" runat="server">
    <input type="hidden" id="bizTypeId" value="@ViewData["bizTypeId"]" />
    <input type="hidden" id="bizTypeName" value="@ViewData["bizTypeName"] " />
    <div id="topmenu"></div>
    <div id="toolbar"></div>
    <div id="searchbar"></div>
    <div id="maingrid"></div>
    </form>
