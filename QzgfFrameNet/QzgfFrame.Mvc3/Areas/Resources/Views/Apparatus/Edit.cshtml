@model QzgfFrame.Resources.ApparatusManger.Models.ResourceApparatus
@{
    
    ViewBag.Title = "Register";
}       
<script src="@Url.Content("~/Content/lib/js/Resources/Apparatus.js")" type="text/javascript"></script>
<script src="@Url.Content("~/lib/json2.js")" type="text/javascript"></script> 
@using (Html.BeginForm("Edit", "Apparatus", FormMethod.Post, new { name = "newForm", id = "newForm" }))
{
    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
    <div>
        <table cellpadding="0" border="0" cellspacing="0" class="edittable">
            <tbody>
                <tr>
<input type="hidden" id="frameid" name="frameid" value="@ViewData["frameid"]" />
                    <td class="Right_font" width="10%">二维码：<span class="l-verify-star">&nbsp;</span></td>
                     
                    <td class="Left_font">
                    @Html.HiddenFor(m => m.Id)
                    @Html.TextBoxFor(m => m.TwoDimensionalCode, new { ltype = "text", validate = "{required:false,minlength:1,maxlength:10,number: true}" })
                    </td>
                    <td class="Right_font">所属地市：<span class="l-verify-star">*</span></td>
                     
                    <td class="Left_font">
                    @Html.DropDownList("CityId", (SelectList)ViewData["city"], new { style = "width:135px", ltype = "select" })
                    
                    <input type="hidden" id="bCityId" value="@Model.CityId" /></td>
                </tr>
                <tr>
                    <td class="Right_font">所属区县：<span class="l-verify-star">*</span></td>
                     
                     <td class="Left_font">
                     <input type="text" id="DistrictName" name="DistrictName"   validate = "{required:true,minlength:1,maxlength:30}"/>
                    @Html.HiddenFor(m => m.DistrictId)
                    <input type="hidden" id="bdistrictid" value="@Model.DistrictId" />
                    <input type="hidden" id="districts" value="@ViewData["district"]" />
                    </td> 
                    <td class="Right_font">所属公司：<span class="l-verify-star">*</span></td>
                     
                    <td class="Left_font">
                    <input type="text" id="CompanyName" name="CompanyName" validate = "{required:true,minlength:1,maxlength:30}"/>
                    @Html.HiddenFor(m => m.CompanyId)
                    <input type="hidden" id="bcompanyid" value="@Model.CompanyId" />
                    <input type="hidden" id="curcompany" value="@ViewData["company"]" />
                    </td>
                </tr> 
                
                <tr>
                    <td class="Right_font">所属驻点：<span class="l-verify-star">*</span></td>
                     
                    <td class="Left_font" style="width:34%">
                    <table style="width:100%"><tr><td>        
                    <input type="text" id="StagnationName" validate = "{required:false}" />
                    @Html.HiddenFor(m => m.StagnationId)   
                   </td><td id="displyzd" style="width:75%; text-align:left;color:Red"></td>
                   </tr></table>                      
                    </td>
                    <td class="Right_font">所属网格：<span class="l-verify-star">*</span></td>
                     
                    <td class="Left_font"style="width:34%" >                      
                    <table style="width:100%"><tr><td>                         
                    <input type="text" id="GridName"  validate = "{required:false}" />    
                    @Html.HiddenFor(m => m.GridId) 
                   </td><td id="displywg" style="width:75%; text-align:left; color:Red"></td>
                   </tr></table>              
                    </td> 
                </tr> 
                 <tr>
                    <td class="Right_font">维护专业：<span class="l-verify-star">*</span></td>
                     
                    <td class="Left_font">
                     @Html.DropDownList("MaintainSpecialtyId", (SelectList)ViewData["maintainSpecialty"], new { style = "width:135px", ltype = "select" })
                    </td>
                    <td class="Right_font">序列号：<span class="l-verify-star">*</span></td>
                      <td class="Left_font" style="width:40%">
                    <table style="width:100%"><tr><td>   
                    @if (Model.Id != "0")
                    { 
                     @Html.HiddenFor(m => m.SeqNo) 
                        @Model.SeqNo
                    }
                    else
                    {
                    <input type="hidden" id="terimFlag" value="0"/>    
                     @Html.TextBoxFor(m => m.SeqNo, new { maxlength = "50", onblur = "getSeqNo(this.value);", @class = "dd-text", style = "width:138px;", validate = "{required:true,minlength:1,maxlength:50,isSeqNo:true}" })
                    
                    }
                     </td><td id="showTerim" style="width:75%; text-align:left; color:red"></td>
                   </tr></table>
                   </td>
                </tr>
                <tr>
                    
                    <td class="Right_font">用 途：<span class="l-verify-star">*</span></td>
                     
                    <td class="Left_font" >
                     @Html.DropDownList("UseId", (SelectList)ViewData["use"], new { style = "width:135px", ltype = "select" })
                    </td>
                    <td class="Right_font">状 态：<span class="l-verify-star">*</span></td>
                     
                    <td class="Left_font">
                     @Html.DropDownList("meterStateId", (SelectList)ViewData["meterState"], new { style = "width:135px", ltype = "select" })
                    </td>
                </tr>  
                 <tr>
                    <td class="Right_font">仪表厂商：<span class="l-verify-star">*</span></td>
                     
                    <td class="Left_font" colspan="3">
                    
                    @Html.TextBoxFor(m => m.ManuFacturer, new { ltype = "text", validate = "{required:true,minlength:1,maxlength:30}" })
                    </td> 
                   
                </tr> 
                 <tr>
                 
                    <td class="Right_font">仪表名称：<span class="l-verify-star">*</span></td>
                     
                    <td class="Left_font">
                    @Html.TextBoxFor(m => m.MeterName, new { ltype = "text", validate = "{required:true,minlength:1,maxlength:20}" })
                    </td>
                    <td class="Right_font">仪表型号：<span class="l-verify-star">*</span></td>
                     
                    <td class="Left_font" >
                    @Html.TextBoxFor(m => m.MeterModel, new { ltype = "text", validate = "{required:true,minlength:1,maxlength:20}" })
                    </td> 
                </tr> 
                <tr>
                    <td class="Right_font">备注：<span class="l-verify-star">&nbsp;</span></td>
                     
                    <td class="Left_font" colspan="4">
                    @Html.TextAreaFor(m => m.Remark, new { Multiline = true, @class = "l-textarea", size = "80", style = "width:100%", validate = "{required:false,minlength:0,maxlength:100}" })
                    </td> 
</tr></tbody>
</table>  
<table width="100%"><tr><td style="width:45%"></td>
<td><input type="submit" value="提 交" id="Button1" class="l-button l-button-submit" /> 
<input type="button" value="返 回" class="l-button l-button-test" onclick="javascript:f_windowclose();"/></td></tr></table>                  
   
    </div> 
    }
    