
<body style="text-align: center; background: #73bcff url('/Content/Lib/images/login/bg_login.jpg') repeat-x">
    <div id="login" >
        <div id="loginpanel">
            <div class="panel-c">
                <div class="panel-c-l">
                    <table cellpadding="0" cellspacing="0">
                        <tbody>
                            <tr>
                                <td align="right">
                                    用户名：
                                </td>
                                <td align="left">
                                    <input type="text" name="loginusername" id="txtUsername" class="login-text" />
                                </td>
                            </tr>
                            <tr>
                                <td align="right">
                                    密 &nbsp;码：
                                </td>
                                <td align="left">
                                    <input type="password" name="loginpassword" id="txtPassword"  class="login-text" />
                                </td>
                            </tr>
                            <tr>
                                <td align="right">
                                    验证码：
                                </td>
                                <td align="left">
                                    <input type="text" name="authcode" maxlength="4" id="txtauthcode" class="login-text" style="width: 55px" />&nbsp;<img
                                     id="imgauthcode"   src="/home/Authcode?date="+(new Date().getTime()) alt="不清楚，再来一张" onclick="changeauthcode()" />
                                      <a id="my" href="javascript:changeauthcode()"  style="font-size: 11px">不清楚，再来一张</a>
                                </td>
                            </tr>
                            <!--
                            <tr>
                                <td align="right">
                                    短信随机码：
                                </td>
