    <script type="text/javascript">
        function changeauthcode() {
            //alert("ss");
            $("#imgauthcode").attr("src", "/home/Authcode?r=" + (new Date().getTime()));
        }

        $(function () {
            $(".login-text").focus(function () {
                $(this).addClass("login-text-focus");
            }).blur(function () {
                $(this).removeClass("login-text-focus");
            });

            $("#btnLogin").click(function () {
                var username = $("#txtUsername").val();
                var password = $("#txtPassword").val();
                var authcode = $("#txtauthcode").val();
                if (username == "") {
                    $.ligerDialog.alert('账号不能为空!');
                    $("#txtUsername").focus();
                    return;
                }
                if (password == "") {
                    $.ligerDialog.alert('密码不能为空!');
                    $("#txtPassword").focus();
                    return;
                }
                if (authcode == "") {
                    $.ligerDialog.alert('验证码不能为空!');
                    $("#txtauthcode").focus();
                    return;
                }
                $.ajax({
                    type: 'post', cache: false, dataType: 'json',
                    url: '/Home/CheckLogin',
                    data: [
                   { name: 'username', value: username },
                   { name: 'password', value: password },
                   { name: 'authcode', value: authcode }
                   ],
                    success: function (result) {
                        if (result == "0") {
                            $.ligerDialog.alert('登陆失败,账号或密码有误!');
                            $("#txtUsername").focus();
                        } else if (result == "2") {
                            $.ligerDialog.alert('验证码有误!');
                            $("#txtauthcode").focus();
                        }
                        else {
                            location.href = "/home/";
                        }
                    },
                    error: function (ex) {
                        //debugger;
                        //alert(ex);
                        $.ligerDialog.alert('发送系统错误,请与系统管理员联系!');
                    },
                    beforeSend: function () {
                        $("#btnLogin").attr("disabled", true);
                    },
                    complete: function () {
                        $("#btnLogin").attr("disabled", false);
                    }
                });
            });
        });
    </script>
