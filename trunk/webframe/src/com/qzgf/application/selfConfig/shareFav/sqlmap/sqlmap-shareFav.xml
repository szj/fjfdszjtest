	<!-- 地图名片查询记录总数 -->
	<select id="findShareFavCount" parameterClass="java.util.HashMap" resultClass="java.lang.Integer" remapResults="true">
		select count(1) from T_SELFCONFIG_MAPCARD
		 where State &lt;&gt;0
