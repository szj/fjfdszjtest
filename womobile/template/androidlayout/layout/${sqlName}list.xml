<?xml version="1.0" encoding="UTF-8"?>
<#assign className = table.className>   
<#assign classNameLower = className?uncap_first> 

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<Button android:text="@string/txtadd" android:id="@+id/btn${table.sqlName}add"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center" android:layout_marginTop="100dip" ></Button>
	<Button android:text="@string/txtquery" android:id="@+id/btn${table.sqlName}query"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center"></Button>
	<Button android:text="@string/txtback" android:id="@+id/btn${table.sqlName}back"
		android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="50dip"
		android:layout_gravity="right"></Button>
</LinearLayout>